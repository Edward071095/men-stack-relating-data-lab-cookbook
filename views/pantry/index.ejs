<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Pantry</title>
  </head>
  <body>
    <%- include('../partials/_navbar.ejs') %>
    <h1>My Pantry</h1>
    <a href="/users/<%=user._id%>/pantry/new">Add New Item</a>
    <ul>
        <% pantry.forEach((item)=>{ %>
          <a href="/users/<%= user._id %>/pantry/<%= item._id %>">
        <li>
          <%= item.food %> made with <%= item.ingredients %>
          </a>
        </li>
        <% }) %>
      </ul>
  </body>
</html>
